<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.CounterActivity">

    <TextView
        android:id="@+id/counter"
        android:layout_width="@dimen/CounterActivity_button_size"
        android:layout_height="@dimen/CounterActivity_button_size"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="1" />

    <Button
        android:id="@+id/incrementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CounterActivity_increment" />

    <Button
        android:id="@+id/decrementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/CounterActivity_decrement" />
</LinearLayout>